<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <gradient android:angle="90" android:endColor="#626262" android:startColor="#343434" />

            <stroke android:width="1dp" android:color="#626262" />

            <corners android:radius="5dp" />

            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#E6B85C" android:startColor="#665229" />

            <stroke android:width="1dp" android:color="#FFCC66" />

            <corners android:radius="5dp" />

            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
        </shape></item>

</selector>