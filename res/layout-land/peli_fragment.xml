<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NakkiActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/imgRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_button_default" />

        <ImageView
            android:id="@+id/imgPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/purple_button_default" />

        <ImageView
            android:id="@+id/imgGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_button_default" />

        <ImageView
            android:id="@+id/imgBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blue_button_default" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvNopeusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="55dp"
        android:text="@string/speed_tv" />

    <Button
        android:id="@+id/buttonStart"
        android:background="@drawable/main_button"
        style="@style/MainButton"
        android:layout_width="97dp"
        android:layout_height="66dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignTop="@+id/tvNopeusText"
        android:text="@string/start_button" />

    <Button
        android:id="@+id/buttonStop"
        android:background="@drawable/main_button"
        style="@style/MainButton"
        android:layout_width="97dp"
        android:layout_height="66dp"
        android:layout_alignTop="@+id/tvNopeusText"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/buttonStart"
        android:text="@string/stop_button" />

    <TextView
        android:id="@+id/textViewPisteet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="0"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvHighScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_alignTop="@+id/tvHighScore"
        android:layout_marginRight="24dp"
        android:text="0"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvNopeus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonStop"
        android:layout_alignBottom="@+id/buttonStop"
        android:layout_centerHorizontal="true"
        android:text="600" />

    <TextView
        android:id="@+id/tvMs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNopeus"
        android:layout_alignBottom="@+id/tvNopeus"
        android:layout_toRightOf="@+id/tvNopeusText"
        android:text="ms" />

    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNopeusText"
        android:layout_alignBottom="@+id/tvNopeusText"
        android:layout_marginRight="23dp"
        android:layout_toLeftOf="@+id/tvHighScore2"
        android:text="@string/score_tv" />

</RelativeLayout>